    <tr> <td> Color: </td> <td> <%= onerec.color %> </td> </tr>
    <tr> <td> Brand ID: </td> <td> <%= onerec.brand_id %> </td> </tr>
    <tr> <td> Category ID: </td> <td> <%= onerec.category_id %> </td> </tr>
    <tr> <td> Sold: </td> <td> <%= onerec.sold %> </td> </tr>
