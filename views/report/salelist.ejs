<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>Order ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Order Date</th>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>


    <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.id %></td>
            <td><%= recref.first_name %></td>
            <td><%= recref.last_name %></td>
            <td><%= recref.order_date.toLocaleDateString('en-US') %></td>
            <td><%= recref.product_name %></td>
            <td><%= recref.price %></td>
            <td><%= recref.quantity %></td>

        </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>No Records Available</p>
    <% } %>
 