<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>Order Item ID</th>
            <th>Order ID</th>
            <th>Product ID</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>


    <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.id %></td>
            <td><%= recref.order_id %></td>
            <td><%= recref.product_id %></td>
            <td><%= recref.price %></td>
            <td><%= recref.quantity %></td>
            <td><a href='/order_items/<%= recref.id %>/show'> Details</a></td>
            <td><a href='/order_items/<%= recref.id %>/edit'>Edit</a></td>
            <td><a href='/order_items/<%= recref.id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>

<p> <a href='/order_items/addrecord'>Add New</a> </p>