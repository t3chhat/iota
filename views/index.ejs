<h1>Iota is the premier hub for affordable vintage clothing. We source the best possible garments for you to add to your collection of fashionable pieces. All styles, all quality, all afforable.</h1>
<hr>

<table border="1" width="100%">
<tr>
  <td width="80%">
      <% if (allrecs.length > 0) {%>
        <% allrecs.forEach((recref, index) => { %>
          <product>
          <table>
            <tr> <td colspan="2"><%= recref.product_name %></td></tr>
            <tr> <td colspan="2"><img src="/images/<%= recref.prod_image %>" alt="<%= recref.product_name %>" style="max-width: 100%; height: auto;"></td></tr>
            <tr> <td><%= recref.description %></td></tr>
            <tr> <td><%= recref.price %></td></tr>
            <tr> <td><%= recref.size %></td></tr>
              <td><a href='/product/<%= recref.id %>/show'>Details</a></td></tr>
          </table>
        </product>
        <% }); %>
        <% } else { %>
          <p>No products available.</p>
      <% } %>
</td>

<td width="20%">
  <% if (promos.length > 0) {%>
    <% promos.forEach((recref, index) => { %>
        <p><img src="/images/<%= recref.promo_image %>"</p>

      <% }); %>
  <% } %>
</td>
</tr></table>
