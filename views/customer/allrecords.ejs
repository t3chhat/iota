<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Phone Number</th>
            <th>Username</th>
            <th>Password</th>
            <th>Address Line 1</th>
            <th>Address Line 1</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Country</th>
            <th>Payment Method</th>
            <th>Card Number</th>
            <th>Card Expiry</th>
            <th>Card CVV</th>
        </tr>


    <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.id %></td>
            <td><%= recref.first_name %></td>
            <td><%= recref.middle_name %></td>
            <td><%= recref.last_name %></td>
            <td><%= recref.email_address %></td>
            <td><%= recref.phone_number %></td>
            <td><%= recref.username %></td>
            <td><%= recref.password %></td>
            <td><%= recref.address_line1 %> </td>
            <td><%= recref.address_line2 %> </td>
            <td><%= recref.city %></td>
            <td><%= recref.state %></td>
            <td><%= recref.zip_code %></td>
            <td><%= recref.country %></td>
            <td><%= recref.payment_method %></td>
            <td><%= recref.card_number %></td>
            <td><%= recref.card_expiry.toLocaleDateString('en-US') %></td>
            <td><%= recref.card_cvv %></td>
            <td><a href='/customer/<%= recref.id %>/show'> Details</a></td>
            <td><a href='/customer/<%= recref.id %>/edit'>Edit</a></td>
            <td><a href='/customer/<%= recref.id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>

<p> <a href='/customer/addrecord'>Add New</a> </p>



