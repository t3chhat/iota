<h1> Edit Product</h1>
<form action="/customer/save" method="post">
    <input type="hidden" name="id" value="<%= onerec.id %>" >
<table>

<tr> <td> First Name: </td> <td> <input type="text" value="<%= onerec.first_name %>" name="first_name" required> </td> </tr>
<tr> <td> Middle Name: </td> <td> <input type="text" value="<%= onerec.middle_name %>" name="middle_name"> </td> </tr>
<tr> <td> Last Name: </td> <td> <input type="text" value="<%= onerec.last_name %>" name="last_name" required> </td> </tr>
<tr> <td> Email Address: </td> <td> <input type="text" value="<%= onerec.email_address %>" name="email_address" required> </td> </tr>
<tr> <td> Phone Number: </td> <td> <input type="text" value="<%= onerec.phone_number %>" name="phone_number"> </td> </tr>
<tr> <td> Username: </td> <td> <input type="text" value="<%= onerec.username %>" name="username"> </td> </tr>
<tr> <td> Password: </td> <td> <input type="password" value="<%= onerec.password %>" name="password" required> </td> </tr>
<tr> <td> Address Line 1: </td> <td> <input type="text" value="<%= onerec.address_line1 %>" name="address_line1" required> </td> </tr>
<tr> <td> Address Line 2: </td> <td> <input type="text" value="<%= onerec.address_line2 %>" name="address_line2"> </td> </tr>
<tr> <td> City: </td> <td> <input type="text" value="<%= onerec.city %>" name="city"  required> </td> </tr>
<tr> <td> State: </td> <td> <input type="text" value="<%= onerec.state %>" name="state"  required> </td> </tr>
<tr> <td> Zip Code: </td> <td> <input type="number" value="<%= onerec.zip_code %>" name="zip_code" required> </td> </tr>
<tr> <td> Country: </td> <td> <input type="text" value="<%= onerec.country %>" name="country" required> </td> </tr>
<tr> <td> Payment Method: </td> <td> <input type="text" value="<%= onerec.payment_method %>" name="payment_method" required> </td> </tr>
<tr> <td> Card Number: </td> <td> <input type="number" value="<%= onerec.card_number %>" name="card_number"> </td> </tr>
<tr> <td> Card Expiry: </td> <td> <input type="date" value="<%= onerec.card_expiry.toISOString().split('T')[0] %>" name="card_expiry"> </td> </tr>
<tr> <td> Card CVV: </td> <td> <input type="number" value="<%= onerec.card_cvv %>" name="card_cvv"> </td> </tr>

</table>

<button type="submit">Save</button>
</form>
