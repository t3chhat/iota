<% var totprice = 0 %>
<% var totqty = 0 %>
<% var itemscost = 0 %>
<% if (cartitems != '0') {%>
<p> Current cart selection: </p>
    <table border=1>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Size</th>
            <th>Color</th>
            <th>Quantity</th>
            <th>Items Cost</th>
            <th>Action</th> 
        </tr>
        <% cartitems.forEach((item, index) => { %>
            <tr>
                <td><%= item.product_name %></td>
                <td><%= item.price %></td>
                <td><%= item.size %></td>
                <td><%= item.color %></td>
                <% totqty = totqty + parseInt(qtys[index]) %>
                <% itemscost = item.price * parseInt(qtys[index]) %>
                <td><%= qtys[index] %> </td>
                <td><%= itemscost %> </td>
                <% totprice = totprice + itemscost %>
                <td><form action="/catalog/remove" method="post" >
                    <input type="hidden" name="id" value=<%= item.id %> >
                    <button type="submit">Remove</button>
            </form></td>
        </tr>
        <% }); %>
    <tr bgcolor="pink" >
            <td colspan="4"><b>Totals</b></td>
            <td><%= totqty %></td>
            <td><%= totprice %></td>
            <td><button class='button1' onclick="window.location.href='/catalog/checkout'">Checkout</button>
        </tr>
    </table>
<% } else { %>  
    <p>Cart Is Empty</p>
<% } %> 

