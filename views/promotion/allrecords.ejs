<% if (allrecs.length > 0) {%>
    <table border="1">
        <tr>
            <th>Promotion ID</th>
            <th>Promotion Title</th>
            <th>Promotion Image</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Discount Rate</th>
        </tr>


    <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.id %></td>
            <td><%= recref.promo_title %></td>
            <td><%= recref.promo_image %></td>
            <td><%= recref.description %></td>
            <td><%= recref.start_date %></td>
            <td><%= recref.end_date %></td>
            <td><%= recref.discount_rate %></td>
            <td><a href='/promotion/<%= recref.id %>/show'> Details</a></td>
            <td><a href='/promotion/<%= recref.id %>/edit'>Edit</a></td>
            <td><a href='/promotion/<%= recref.id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>

<p> <a href='/promotion/addrecord'>Add New</a> </p>